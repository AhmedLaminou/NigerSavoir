{
  "expo": {
    "name": "Niger Savoir+",
    "slug": "nigersavoir-mobile",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "automatic",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#E67E22"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.nigersavoir.mobile"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#E67E22"
      },
      "package": "com.nigersavoir.mobile"
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "scheme": "nigersavoir",
    "plugins": [
      "expo-router"
    ]
  }
}
